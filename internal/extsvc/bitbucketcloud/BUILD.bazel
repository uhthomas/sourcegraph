        "events_test.go",
        "main_test.go",
        "pull_requests_test.go",
        "repositories_test.go",
        "users_test.go",
    ],
    data = glob(["testdata/**"]),
    embed = [":bitbucketcloud"],
    deps = [
        "//internal/errcode",
        "//internal/extsvc/auth",
        "//internal/extsvc/bitbucketcloud/testing",
