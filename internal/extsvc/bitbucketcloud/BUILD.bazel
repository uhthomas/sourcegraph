        "//internal/httptestutil",
        "//internal/lazyregexp",
        "//internal/testutil",
        "//schema",
        "@com_github_google_go_cmp//cmp",
        "@com_github_grafana_regexp//:regexp",
        "@com_github_sourcegraph_sourcegraph_lib//errors",
        "@com_github_stretchr_testify//assert",
    ],
)
