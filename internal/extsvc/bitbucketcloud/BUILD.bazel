load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "bitbucketcloud",
    srcs = [
        "client.go",
        "events.go",
        "paginated.go",
        "pull_requests.go",
        "repositories.go",
        "types.go",
        "users.go",
    ],
    importpath = "github.com/sourcegraph/sourcegraph/internal/extsvc/bitbucketcloud",
    visibility = ["//:__subpackages__"],
    deps = [
        "//internal/errcode",
        "//internal/extsvc",
        "//internal/extsvc/auth",
        "//internal/httpcli",
        "//internal/metrics",
        "//internal/ratelimit",
        "//internal/trace/ot",
        "//schema",
        "@com_github_opentracing_contrib_go_stdlib//nethttp",
        "@com_github_sourcegraph_sourcegraph_lib//errors",
